<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<h1>Countries</h1>
<button type="button" ><a href='/addCountry'>Add Country</a></button>
<table>
    <tr>
        <th>Country Code</th>
        <th>Country Name</th>
        <th>Country Details</th>
        <th>Action</th>
        <th></th>
    </tr>
    <% countries.forEach((country)=> { %>
        <tr>
            <td>
                <%= country.co_code %>
            </td>
            <td>
                <%= country.co_name %>
            </td>
            <td>
                <%= country.co_details %>
            </td>
            <td>
                <a href='edit/<%= country.co_code %>'>Update</a>
            </td>
            <td>
                <a href='delete/<%= country.co_code %>'>Delete</a>
            </td>
        </tr>
        <% }) %>
</table>

<a href='/'>Home</a>